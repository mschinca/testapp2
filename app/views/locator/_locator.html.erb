<script src="//ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js" type="text/javascript"></script>
<script src="//maps.google.com/maps/api/js?sensor=true&libraries=places" type="text/javascript"></script>
<%= javascript_include_tag "locator" %>
<div id="locator" style="width: 100%">
  <div id="spacer" style="margin-top:1em;">
    <div id="navigation" style="width: 300px;float:left">
        <div id="directionFields">
                La tua posizione:
                <input id="currentPosition" class="locationField" type="text" name="lname" value="" autocomplete="off" style="width: 100%; height:2em;"><br /><br />
                Agenzia:
                <input id="agencyPosition" class="locationField" type="text" name="lname" value=""
                        placeholder="Scegli un'agenzia dalla mappa" style="width: 100%; height:2em;" disabled="disabled"><br />
                <input id="agencyNumber" type="hidden" value=""><br />
                <input id="doRoute" type="submit" value="Indicazioni stradali" disabled="disabled">
                <input id="resetLocator" type="submit" value="Reimposta"><br />
        </div>
        <div id="directionsPanel"></div>
    </div>
    <br />
    <div id="map_div" style="height: 600px; width: 1000px;float: right"></div>
  </div>
</div>

